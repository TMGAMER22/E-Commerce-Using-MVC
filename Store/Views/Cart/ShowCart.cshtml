@model Store.Models.Cart
@using System.Globalization
@{
    ViewData["Title"] = "ShowCart";
    Layout = "_Layout";
    var isArabic = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.StartsWith("ar");
}

<div class="bg-indigo-50 min-h-screen font-sans" dir="@(isArabic ? "rtl" : "ltr")">
    <!-- Header -->
    <header class="bg-gradient-to-r from-purple-600 to-pink-600 py-6">
        <div class="container mx-auto px-4 flex justify-between items-center">
            <h1 class="text-3xl font-extrabold text-white">@SharedLocalizer["YourShoppingCart"]</h1>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        @if (Model == null || !Model.Items.Any())
        {
            <div class="bg-white rounded-2xl shadow-lg p-8 text-center">
                <p class="text-gray-600 text-lg font-medium">@SharedLocalizer["YourCartIsEmpty"]</p>
                <a asp-action="ShowAllProducts" asp-controller="Product"
                   class="mt-4 inline-block bg-indigo-600 text-white py-2 px-6 rounded-lg hover:bg-indigo-700 transition duration-300">
                    @SharedLocalizer["ShopNow"]
                </a>
                <a asp-action="MyOrder" asp-controller="Order"
                   class="mt-4 inline-block bg-indigo-600 text-white py-2 px-6 rounded-lg hover:bg-indigo-700 transition duration-300">
                    @SharedLocalizer["GoToOrder"]
                </a>
            </div>
        }
        else
        {
            <form asp-action="ShowAllProducts" asp-controller="Product" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="bg-indigo-600 text-white py-2 px-6 rounded-lg hover:bg-indigo-700 transition duration-300">
                    <i class="fas fa-check-circle mr-2"></i> @SharedLocalizer["ContinueShopping"]
                </button>
            </form>
            <div class="bg-white rounded-2xl shadow-lg p-6">
                <div class="grid grid-cols-1 gap-4">
                    @foreach (var item in Model.Items)
                    {
                        <div class="flex items-center border-b border-gray-200 py-4">
                            <img src="@(item.Product?.ImagePath ?? "https://via.placeholder.com/100")"
                                 alt="@(item.Product?.Name ?? "Product")"
                                 class="w-20 h-20 object-cover rounded-lg mr-4">
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-gray-900">@(item.Product?.Name ?? "Unnamed Product")</h3>
                                <p class="text-gray-600">
                                    @SharedLocalizer["Price"]: @((item.Product?.Price ?? 0).ToString("C2", new CultureInfo("en-US")))
                                </p>

                                <!-- الكمية + أزرار زيادة/نقصان -->
                                <div class="flex items-center space-x-2 mt-2">
                                    <!-- زرار تقليل -->
                                    <form asp-action="DecreaseItem" method="post" class="inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="CartItemId" value="@item.Id" />
                                        <button type="submit" class="w-8 h-8 flex items-center justify-center bg-red-500 hover:bg-red-600 text-white rounded-full shadow">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </form>

                                    <span class="px-3 font-semibold text-gray-700">@item.Quantity</span>

                                    <!-- زرار زيادة -->
                                    <form asp-action="IncreaseItem" method="post" class="inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="CartItemId" value="@item.Id" />
                                        <button type="submit" class="w-8 h-8 flex items-center justify-center bg-green-500 hover:bg-green-600 text-white rounded-full shadow">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </form>
                                </div>

                                <p class="text-indigo-600 font-medium mt-2">
                                    @SharedLocalizer["Total"]: @(((item.Product?.Price ?? 0) * item.Quantity).ToString("C2", new CultureInfo("en-US")))
                                </p>
                            </div>
                        </div>
                    }
                </div>

                <!-- القسم بتاع الإجمالي + الأزرار -->
                <div class="mt-6 flex justify-between items-center">
                    <p class="text-xl font-bold text-gray-900">
                        @SharedLocalizer["Total"]: @(Model.Items.Sum(i => (i.Product?.Price ?? 0) * i.Quantity).ToString("C2", new CultureInfo("en-US")))
                    </p>
                    <div class="flex space-x-3">
                        <!-- زرار Clear All -->
                        <form asp-action="ClearCart" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 transition duration-300">
                                <i class="fas fa-trash mr-1"></i> @SharedLocalizer["ClearAll"]
                            </button>
                        </form>
                        <!-- زرار Checkout -->
                        <form asp-action="Checkout" asp-controller="Order" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="bg-indigo-600 text-white py-2 px-6 rounded-lg hover:bg-indigo-700 transition duration-300">
                                <i class="fas fa-check-circle mr-2"></i> @SharedLocalizer["ProceedToCheckout"]
                            </button>
                        </form>

                        <a asp-controller="Order" asp-action="MyOrder" class="btn btn-primary">
                            <i class="fas fa-shopping-cart"></i> @SharedLocalizer["GoToOrder"]
                        </a>
                    </div>
                </div>
            </div>
        }
    </main>

    <!-- Footer -->
    <footer class="bg-indigo-900 text-white py-4 mt-8"></footer>
</div>
