@model Store.Models.Cart
@{
    ViewData["Title"] = "ShowCart";
}
@using System.Globalization

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Shopping Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body class="bg-indigo-50 min-h-screen font-sans">
    <!-- Header -->
    <header class="bg-gradient-to-r from-purple-600 to-pink-600 py-6">
        <div class="container mx-auto px-4 flex justify-between items-center">
            <h1 class="text-3xl font-extrabold text-white">Your Shopping Cart</h1>
            <div class="flex items-center space-x-4">
                <a asp-action="ShowAllProducts" asp-controller="Product" class="text-white hover:text-gray-200 font-medium">
                    <i class="fas fa-store mr-1"></i> Continue Shopping
                </a>
                <a asp-action="Details" asp-controller="Account" class="text-white hover:text-gray-200 font-medium">
                    <i class="fas fa-user mr-1"></i> Profile
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        @if (Model == null || !Model.Items.Any())
        {
            <div class="bg-white rounded-2xl shadow-lg p-8 text-center">
                <p class="text-gray-600 text-lg font-medium">Your cart is empty.</p>
                <a asp-action="ShowAllProducts" asp-controller="Product" class="mt-4 inline-block bg-indigo-600 text-white py-2 px-6 rounded-lg hover:bg-indigo-700 transition duration-300">Shop Now</a>
            </div>
        }
        else
        {
            <div class="bg-white rounded-2xl shadow-lg p-6">
                <div class="grid grid-cols-1 gap-4">
                    @foreach (var item in Model.Items)
                    {
                        <div class="flex items-center border-b border-gray-200 py-4">
                            <img src="@(item.Product?.ImagePath ?? "https://via.placeholder.com/100")" alt="@(item.Product?.Name ?? "Product")" class="w-20 h-20 object-cover rounded-lg mr-4">
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-gray-900">@(item.Product?.Name ?? "Unnamed Product")</h3>
                                <p class="text-gray-600">Price: @((item.Product?.Price ?? 0).ToString("C2", new CultureInfo("en-US")))</p>

                                <!-- الكمية + أزرار زيادة/نقصان -->
                                <div class="flex items-center space-x-2 mt-2">
                                    <!-- زرار تقليل -->
                                    <form asp-action="DecreaseItem" method="post" class="inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="CartItemId" value="@item.Id" />
                                        <button type="submit" class="w-8 h-8 flex items-center justify-center bg-red-500 hover:bg-red-600 text-white rounded-full shadow">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </form>

                                    <span class="px-3 font-semibold text-gray-700">@item.Quantity</span>

                                    <!-- زرار زيادة -->
                                    <form asp-action="IncreaseItem" method="post" class="inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="CartItemId" value="@item.Id" />
                                        <button type="submit" class="w-8 h-8 flex items-center justify-center bg-green-500 hover:bg-green-600 text-white rounded-full shadow">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </form>
                                </div>

                                <p class="text-indigo-600 font-medium mt-2">Total: @(((item.Product?.Price ?? 0) * item.Quantity).ToString("C2", new CultureInfo("en-US")))</p>
                            </div>

                        </div>
                    }
                </div>

                <!-- القسم بتاع الإجمالي + الأزرار -->
                <div class="mt-6 flex justify-between items-center">
                    <p class="text-xl font-bold text-gray-900">
                        Total: @(Model.Items.Sum(i => (i.Product?.Price ?? 0) * i.Quantity).ToString("C2", new CultureInfo("en-US")))
                    </p>
                    <div class="flex space-x-3">
                        <!-- زرار Clear All -->
                        <form asp-action="ClearCart" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 transition duration-300">
                                <i class="fas fa-trash mr-1"></i> Clear All
                            </button>
                        </form>
                        <!-- زرار Checkout -->
                        <form asp-action="Checkout" asp-controller="Order" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="bg-indigo-600 text-white py-2 px-6 rounded-lg hover:bg-indigo-700 transition duration-300">
                                <i class="fas fa-check-circle mr-2"></i> Proceed to Checkout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </main>

    <!-- Footer -->
    <footer class="bg-indigo-900 text-white py-4 mt-8">
    </footer>
</body>
</html>
