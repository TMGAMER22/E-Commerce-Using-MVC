@model List<Store.Models.Product>
@{
    ViewData["Title"] = "Show User Products ";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Listing</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen py-8">
    <div class="container mx-auto px-4">

        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Products</h2>
            <a asp-action="AddProduct" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition duration-200">+ Add New Product</a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <p class="text-gray-600 text-center">No products available.</p>
        }
        else
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var product in Model)
                {
                    <div class="bg-white p-6 rounded-lg shadow-md flex flex-col justify-between">
                        <!-- Product Image -->
                        <img src="@(product.ImagePath ?? "https://via.placeholder.com/150")"
                             alt="@(product.Name ?? "Product Image")"
                             class="w-full h-40 object-cover rounded-lg mb-4">

                        <!-- Product Info -->
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800">@(product.Name ?? "Unnamed Product")</h3>
                            <p class="text-gray-600">💰 Price: @(product.Price.ToString("C"))</p>
                            <p class="text-gray-600">📦 Stock: @(product.StockQuantity)</p>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-4 flex space-x-2">
                            <a asp-action="EditProduct" asp-route-id="@product.Id"
                               class="bg-yellow-500 text-white px-3 py-1 rounded-lg hover:bg-yellow-600 transition">Edit</a>

                            <form asp-action="DeleteProduct" method="post" class="inline">
                                <input type="hidden" name="id" value="@product.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        onclick="return confirm('Are you sure you want to delete this product?');"
                                        class="bg-red-500 text-white px-3 py-1 rounded-lg hover:bg-red-600 transition">
                                    Delete
                                </button>
                            </form>

                        </div>
                    </div>
                }
            </div>
        }
        <!-- Back to Home -->
        <div class="mt-6 text-center">
            <a asp-action="Index" asp-controller="Home" class="text-blue-500 hover:underline font-medium">Home</a>
        </div>
    </div>
</body>
</html>
