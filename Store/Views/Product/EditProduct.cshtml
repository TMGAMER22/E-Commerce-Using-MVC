@model Product
@{
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen py-8">
    <div class="container mx-auto px-4 max-w-2xl">
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">@SharedLocalizer["Edit"]</h2>

            <form asp-action="SaveEdit" method="post" enctype="multipart/form-data" class="space-y-6">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />

                <!-- Product Name -->
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">@SharedLocalizer["ProductName"]</label>
                    <input asp-for="Name" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="@SharedLocalizer["EnterProductName"]" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <!-- Price -->
                <div>
                    <label asp-for="Price" class="block text-sm font-medium text-gray-700 mb-1">@SharedLocalizer["Price"]</label>
                    <input asp-for="Price" type="number" step="0.01" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="@SharedLocalizer["EnterPrice"]" />
                    <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
                </div>

                <!-- Stock -->
                <div>
                    <label asp-for="StockQuantity" class="block text-sm font-medium text-gray-700 mb-1">@SharedLocalizer["StockQuantity"]</label>
                    <input asp-for="StockQuantity" type="number" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="@SharedLocalizer["EnterStock"]" />
                    <span asp-validation-for="StockQuantity" class="text-red-500 text-sm"></span>
                </div>

                    <input type="hidden" asp-for="ImagePath" />

                    <a asp-controller="Product" asp-action="ShowUserProducts"
                   class="bg-yellow-500 text-white px-3 py-1 rounded-lg hover:bg-yellow-600 transition">@SharedLocalizer["BackToProducts"]</a>

                <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition">
                    @SharedLocalizer["SaveChanger"]
                </button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
