@model Store.ViewModel.Account.ChangePasswordViewModel
@{
	ViewData["Title"] = "EditPassword";
	Layout = "_Layout";
}

<div class="flex items-center justify-center min-h-[calc(100vh-200px)]">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">@SharedLocalizer["ChangePassword"]</h2>
    <form asp-action="SaveEditPassword" method="post">
      <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
      <div class="space-y-4">
        <div>
          <label asp-for="OldPassword" class="block text-gray-700 font-medium mb-1">@SharedLocalizer["OldPassword"]</label>
          <input asp-for="OldPassword" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
          <span asp-validation-for="OldPassword" class="text-red-500 text-sm"></span>
        </div>
        <div>
          <label asp-for="NewPassword" class="block text-gray-700 font-medium mb-1">@SharedLocalizer["NewPassword"]</label>
          <input asp-for="NewPassword" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
          <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
        </div>
        <div>
          <label asp-for="ConfirmPassword" class="block text-gray-700 font-medium mb-1">@SharedLocalizer["ConfirmPassword"]</label>
          <input asp-for="ConfirmPassword" class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
          <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>
      </div>
      <div class="mt-6 text-center">
        <button type="submit" class="inline-block bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600 transition duration-200">@SharedLocalizer["ChangePassword"]</button>
      </div>
    </form>
    <div class="mt-4 text-center">
      <a asp-action="Details" class="text-blue-500 hover:underline font-medium">@SharedLocalizer["BackToDetails"]</a>
    </div>
  </div>
</div>
